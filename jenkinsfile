
//pipeline scripted using groovy script

node {
def mavenhome = tool name: "maven3.9.4"

try{
stage ('checkoutcode'){
notifyBuild("STARTED")
git branch: 'dev', credentialsId: 'bb6aae6b-4ad4-4beb-a993-a0f249af88ed', url: 'https://github.com/aaVignesh/maven-web-application.git'
}//git repository access

stage ('Build'){
sh "${mavenhome}/bin/mvn clean package"
}//build package
}catch(e){
    currentBuild.result = "FAILED"
}finally{
notifyBuild(currentBuild.result)
}
}//nodeclosing

def notifyBuild(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESSFUL'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESSFUL') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary, channel: "#citibank")
}
