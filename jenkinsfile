node {
def mavenhome= tool name: 'maven3.9.4'

stage('checkoutcode'){
git credentialsId: 'bb6aae6b-4ad4-4beb-a993-a0f249af88ed', url: 'https://github.com/aaVignesh/maven-web-application.git'
}//gitaccess

stage('build'){
sh "${mavenhome}/bin/mvn clean package"
}
stage('executesonarreport'){
sh "${mavenhome}/bin/mvn clean sonar:sonar"
}

stage('upload into nexus'){
sh "${mavenhome}/bin/mvn clean deploy"
}
stage('uploadintotomcat'){
sshagent(['8f2cac2e-237b-4953-9605-18bff387d002']) {
sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@172.31.35.37:/opt/apache-tomcat-9.0.82/webapps/"
}
}//stageclosing
}//pipelineclosing
